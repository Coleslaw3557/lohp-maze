{
  "server_ip": "192.168.1.238",
  "unit_name": "LOHP-UNIT-A",
  "associated_rooms": ["Entrance", "Cuddle Cross", "Photo Bomb Room", "No Friends Monday", "Exit"],
  "audio_output_device": "default",
  "triggers": [
    {
      "name": "Button 1",
      "type": "adc",
      "channel": 0,
      "adc_address": "0x48",
      "action": {
        "type": "curl",
        "method": "POST",
        "url": "http://${server_ip}:5000/api/set_theme",
        "headers": {
          "Content-Type": "application/json"
        },
        "data": {
          "next_theme": true
        }
      }
    },
    {
      "name": "Button 2",
      "type": "adc",
      "channel": 1,
      "adc_address": "0x48",
      "action": {
        "type": "curl",
        "method": "POST",
        "url": "http://${server_ip}:5000/api/run_effect_all_rooms",
        "headers": {
          "Content-Type": "application/json"
        },
        "data": {
          "effect_name": "Lightning"
        }
      }
    },
    {
      "name": "Button 3",
      "type": "adc",
      "channel": 2,
      "adc_address": "0x48",
      "action": {
        "type": "curl",
        "method": "POST",
        "url": "http://${server_ip}:5000/api/start_music",
        "headers": {
          "Content-Type": "application/json"
        },
        "data": {}
      }
    },
    {
      "name": "Button 4",
      "type": "adc",
      "channel": 3,
      "adc_address": "0x48",
      "action": {
        "type": "curl",
        "method": "POST",
        "url": "http://${server_ip}:5000/api/run_effect",
        "headers": {
          "Content-Type": "application/json"
        },
        "data": {
          "room": "Cuddle Cross",
          "effect_name": "CuddleCrossEffect"
        }
      }
    }
  ],
  "lasers": [
    {"name": "EntranceLT", "gpio": 17},
    {"name": "EntranceLR", "gpio": 27},
    {"name": "CuddleCrossLT", "gpio": 22},
    {"name": "CuddleCrossLR", "gpio": 5},
    {"name": "PhotoBombLT", "gpio": 24},
    {"name": "PhotoBombLR", "gpio": 6},
    {"name": "NoFriendsMondayLT", "gpio": 25},
    {"name": "NoFriendsMondayLR", "gpio": 13},
    {"name": "ExitLT", "gpio": 19},
    {"name": "ExitLR", "gpio": 26}
  ],
  "cache_dir": "/app/cache"
}
